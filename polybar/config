border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Fon:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=10:antialias=false;0
font-2 = "Wuncon Siji:pixelsize=12;1"
font-3 = Fontawesome

modules-left = i3
modules-center = xwindow mpd
modules-right = filesystem xbacklight wlan eth alsa pulseaudio memory cpu temperature battery xkeyboard date powermenu

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;override-redirect = true
;cursor-click = pointer
;cursor-scroll = ns-resize

