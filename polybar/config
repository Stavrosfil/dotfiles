[bar/top]

monitor = ${env:MONITOR:}
width = 100%
height = 28
;offset-x = 1%
;offset-y = 1%

radius = 0
fixed-center = true

background = ${colors.background}
# foreground = ${colors.foreground}
foreground = #ffffff

